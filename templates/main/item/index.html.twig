{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="example-wrapper w-100">
        <div class="row row-cols-1 row-cols-md-1 mb-3">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        {% for item in items %}
                        <h4 class="my-0 fw-normal  text-center">{{ item.title }}</h4>
                        {% endfor %}
                    </div>
                </div>
                <div class="d-flex justify-content-center row">
                        <div class="d-flex flex-column comment-section">
                            <h6>Comments</h6>
                            {% if (comments != null) %}
                                {% for comment in comments %}
                                    <div class="d-flex align-items-center mt-2">
                                        <h>{{ comment.user.name }}</h>
                                        <h6>{{ comment.createAt|date('d-m-Y H:i:s') }}</h6>
                                    </div>
                                    <div class="comment-text-sm"><span>{{ comment.content }}</span></div>
                                {% endfor %}
                            {% endif %}
                            <div class="mt-4">
                                {{ form_start(itemForm) }}
                                        <label class="w-100">
                                            {{ form_widget(itemForm.content, { 'attr': {'class': 'form-control ml-1 shadow-none textarea'} }) }}
                                        </label>
                                    <div class="mt-2 text-right">
                                        {{ form_widget(itemForm.post, { 'attr': {'class':"btn btn-primary btn-sm shadow-none"}}) }}
                                    </div>
                                </div>
                                {{ form_end(itemForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

{% endblock %}
